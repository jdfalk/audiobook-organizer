# OpenAI API Configuration (optional, for AI-powered metadata)
OPENAI_API_KEY=your_api_key_here
ENABLE_AI_PARSING=false
OPENAI_MODEL=gpt-4o-mini

# Server configuration
HOST=0.0.0.0
PORT=8080

# Library and database paths
AO_DIR=/path/to/audiobooks
AO_DB=/data/audiobook-organizer.db

# Authentication and API protections
ENABLE_AUTH=true
API_RATE_LIMIT_PER_MINUTE=100
AUTH_RATE_LIMIT_PER_MINUTE=10
JSON_BODY_LIMIT_MB=1
UPLOAD_BODY_LIMIT_MB=10
